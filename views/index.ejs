<!doctype html>
<!--https://socket.io/get-started/chat/-->
<html>

<head>
    <title>Socket.IO chat</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font: 13px Helvetica, Arial;
        }

        form {
            background: #000;
            padding: 3px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        form input {
            border: 0;
            padding: 10px;
            width: 90%;
            margin-right: .5%;
        }

        form button {
            width: 9%;
            background: rgb(130, 224, 255);
            border: none;
            padding: 10px;
        }

        #messages {
            list-style-type: none;
        }

        #messages li {
            padding: 5px 10px;
        }

        #messages li:nth-child(odd) {
            background: #eee;
        }
         #test {    
            list-style-type: none;
            margin: 0;
            padding: 0;
            margin-bottom:200px;
        }
        #test li {
            padding: 5px 10px;
            background: #eee;
        }

        #test li:nth-child(odd) {
            
        }
        #pseudo{
            margin-bottom: 15px;
        }
        .insertPseudo{
            color: red;
        }
    </style>
</head>

<body>
<button id="log">Login</button>
<ul id="test">  
<% for(messages of message) {%>
        <li><%= messages.username%> <%= messages.message%> <%= messages.date%> </li>
<% }%>
</ul>
    <form action="">
    <label class="insertPseudo" for="pseudo">Votre pseudo : </label>
    <input id="pseudo" autocomplete="off" placeholder="" value="<%= messages.username%>"/>
        <input id="m" autocomplete="off" /><button>Send</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://www.gstatic.com/firebasejs/6.3.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/6.2.4/firebase-auth.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.0.js"></script>
    <script src="firebase.js"></script>
</body>

</html>